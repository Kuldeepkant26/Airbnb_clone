<% layout('../layouts/boilerplate') %>

    <body>

        <form action="/add" method="post" class="addform" enctype="multipart/form-data">
            <h3>Airbnb your home</h3>
            <a href="/home" id="cross"><i class="ri-close-line"></i></a>
            <input type="text" name="title" placeholder="Enter title" required><br>
            <input type="text" name="disc" placeholder="Enter description" required><br>
            <!-- <input type="text" name="image" placeholder="paste image link" required><br> -->
            <input type="file" name="image" placeholder="paste image link" required><br>
            <input type="number" name="price" placeholder="Enter price" required><br>
            <input type="text" name="location" placeholder="Enter Location" required><br>
            <input type="text" name="country" placeholder="Enter country" required><br>
            <label for="ctgry">Choose Category:</label>
            <select id="ctgry" name="ctgry">
                <option value="Boat">Boats</option>
                <option value="Birthday">Birthday</option>
                <option value="Snow">Snow</option>
                <option value="Hotel">Hotel</option>
                <option value="Rainy">Rainy</option>
                <option value="Ancient">Ancient</option>
                <option value="Hill">Hills</option>
            </select>
            <button type="submit">Submit</button>
        </form>

    </body>