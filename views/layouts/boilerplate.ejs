    <style>
        * {
            margin: 0px;
            padding: 0px;
            box-sizing: border-box;
        }

        body {
            padding-top: 4rem;
        }

        a {
            text-decoration: none;
        }

        .ctgrys {
            width: 30%;

            border-radius: 90px;
            display: flex;
            align-items: center;
            overflow-x: scroll;
            /* Enable horizontal scrolling */
            white-space: nowrap;
            /* Keep items in a single line */
            -ms-overflow-style: none;
            /* IE and Edge */
            scrollbar-width: none;
            /* Firefox */
            margin: auto;
          margin-top: 1rem;
            margin-bottom: 1rem;
            padding-right: 1rem;
            padding-left: 1rem;
        }

        .ctgrys::-webkit-scrollbar {
            display: none;
            /* Hide scrollbar for Chrome, Safari, and Opera */
        }

        .ctgry {
            display: flex;
            flex-direction: column;
            align-items: center;
            margin: 0 1rem;
            opacity: 0.6;
            cursor: pointer;
        }
        .ctgrys a{
            color: rgb(58, 56, 56);
        }
        .ctgry:hover{
            opacity: 1;
        }
        .ctgry img{
            height: 1.2rem;
        }

        @media (max-width:700px) {
            .ctgrys {
                width: 90%;

            }
        }
       
    </style>
</head>

